<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :company %><br>
    <%= select(
          :user, 
          :company_id,
          Company.all.collect {|p| [ p.name, p.id ] }, 

      ) %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email, :disabled => !f.object.new_record? , :readonly => !f.object.new_record? %>
  </div>
  <div class="field">
    <%= f.label :user_type %><br>
    <%= select(
          :user, 
          :user_type,
          ['admin', 'user'] 

      ) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
